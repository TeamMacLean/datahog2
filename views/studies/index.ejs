<% include ../head.ejs %>

<div class="topmargin">
    <div class="container">

        <h1>Studies</h1>

        <h2 class="mt-4">Your groups studies</h2>
        <% SortToRows(3, studies.mine).map(row=>{ %>
        <div class="row">
            <% row.map(study=>{ %>
            <div class="col-sm-4">
                <div class="card mb-3">
                    <div class="card-body">
                        <h4 class="card-title"><%- study.accession %></h4>
                        <a href="/studies/<%- study.accession %>" class="btn btn-primary">Show</a>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
        <% }) %>

        <h2 class="mt-4">Unclaimed studies</h2>

        <% SortToRows(4, studies.unclaimed).map(row=>{ %>
        <div class="row">
            <% row.map(study=>{ %>
            <div class="col-sm-3">
                <a href="/studies/<%- study.accession %>"><%- study.accession %></a>
            </div>
            <% }) %>
        </div>
        <% }) %>
    </div>
</div>

<% include ../foot.ejs %>