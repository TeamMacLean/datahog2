<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form method="post" action="<%- claimURL %>">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Claim this</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Are you sure <strong><%- claimable.accession %></strong> belongs to your group?</p>

                    <% if(locals.signedInUser.isAdmin){ %>

                    <div class="form-group">
                        <label for="group" class="form-control-label">Claim on behalf of:</label>
                        <select class="form-control" name="group" id="group">
                            <% locals.groups.map(group=>{ %>
                            <option value="<%- group.shortName %>"><%- group.name %></option>
                            <% }) %>
                        </select>
                    </div>

                    <% } else { %>
                    <p>Claiming for: <strong><%- locals.signedInUser.group.name %></strong></p>
                    <input type="hidden" id="group" name="group" value="TEST">
                    <% } %>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Claim it</button>
                </div>

            </form>
        </div>
    </div>
</div>